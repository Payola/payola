# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /login                      controllers.Application.login()
GET     /signup                     controllers.Application.signup()
POST    /authenticate               controllers.Application.authenticate()
POST    /register                   controllers.Application.register()
GET     /logout                     controllers.Application.logout()

GET     /javaScriptPackage/:symbol  controllers.Application.javaScriptPackage(symbol: String)
POST    /RPC                        controllers.RPC.index()
GET     /test/RPC                   controllers.Application.rpcTest()
POST    /RPC/async                  controllers.RPC.async()

GET     /analysis/list              controllers.Analysis.list()
GET     /analysis/listOwned         controllers.Analysis.listOwned()
GET     /analysis/create            controllers.Analysis.create
GET     /analysis/edit/:id          controllers.Analysis.edit(id)
GET     /analysis/:id               controllers.Analysis.detail(id)

GET     /datasource/create          controllers.DataSource.create()
POST    /datasource/create          controllers.DataSource.createNew()
GET     /datasource/list            controllers.DataSource.list()
GET     /datasource/:id             controllers.DataSource.detail(id, uri: Option[String])
GET     /datasource/edit/:id        controllers.DataSource.edit(id)
GET     /datasource/delete/:id      controllers.DataSource.delete(id)
POST    /datasource/save/:id        controllers.DataSource.saveEdited(id)

GET     /dashboard                  controllers.Application.dashboard()
GET     /profile/create-group       controllers.Profile.createGroup()
GET     /plugin/create              controllers.Profile.createPlugin()
GET     /plugin/list                controllers.Profile.listPlugins()
GET     /profile/list-groups        controllers.Profile.listGroups()
GET     /profile/delete-group       controllers.Profile.deleteGroup(id)
GET     /profile/edit-group/:id     controllers.Profile.editGroup(id)
POST    /profile/save-create-group  controllers.Profile.saveCreateGroup()
POST    /profile/save-group         controllers.Profile.saveGroup(id)
GET     /profile/:username          controllers.Profile.index(username)
GET     /profile/:username/edit     controllers.Profile.edit(username)
POST    /saveprofile/:username      controllers.Profile.save(username)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
